<div class="textbox">
    <h1>Eat that Burger!!!!!!</h1>
    <form class="create-form">

        <div class="form-group">
            <input type="text" id="bu" name="name">
        </div>

        <h2>Enter a burger you want to eat, then click "Submit"</h2>

        <button type="submit">Submit</button>

    </form>
</div>
<div class="burgers">
    <div class="non-devoured">
        <h2>Burgers</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}

                <button class="change-devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
                    Devour it!
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="devoured">
        <h2>Devoured Burgers</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>{{burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>